<!DOCTYPE html>
<html lang="en">
<head>

        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel='stylesheet' href='https://cdn-uicons.flaticon.com/uicons-regular-rounded/css/uicons-regular-rounded.css'>
        <link rel="stylesheet" href="page2.css">
    </head>
    <body>
        <div class="top">
            <div class="top1">
                <img src="clogo.png">
            </div>
            <div class="top2">
                <p class="top21">You choose, We do it</p>
                <p class="top22">St. Joseph's College of Engineering</p>
                <p class="top23">Department of computer Science & Engineering</p>
            </div>
            <div class="top3">
                <img src="clogo1.PNG" class="top31">
            </div>
        </div>
        <div class="outer" >
            <div class="nav" style="margin-bottom: 20px;">
                <div class="head_section">
                  <img src="user.png" alt="">
                  <div class="name">
                    <h3><%=username%></h3>
                  </div>
                </div>
                <div class="nav_links">
                    <ul>
                        <li><a href="details"><i class="fi-rr-browser"></i><span>Staff Details</span></a></li>
                        <li><a href="uploadfile"><i class="fi-rr-document-signed"></i></i><span>Upload File</span></a></li>
                        <li><a href="generatefile"><i class="fi-rr-magic-wand"></i></i><span>Generate File</span></a></li>
                        <li><a href="changepass"><i class="fi-rr-lock"></i></i><span>Change Password</span></a></li>
                        <li><a href="addexam"><i class="fi-rr-lock"></i></i><span>Add Exam</span></a></li>
                        <li><a href="logout"><i class="fi-rr-power"></i><span>Log Out</span></a></li>
                      </ul>
                </div>
              </div>
              <div class="upload" >
                  <h3 style="margin-left: 35%;">Add Exam</h3>
                  <form action="/exam" method="POST">
                    <div class="uploadinput">
                        <label for="st" >Lab Subject:</label>
                        <input type="checkbox" style="width:13px;" id="lab" autocomplete="off" name="lab">
                      <br>
                      </div>
                    <div class="uploadinput" >
                        <label for="batch">Batch :</label>
                        <input type="text" list="batch0" id="batch" autocomplete="off" name="batch">
                        <datalist id="batch0">
                            <option  id="batch1"></option>
                            <option  id="batch2"></option>
                            <option  id="batch3"></option>
                            <option  id="batch4"></option>
                            <option  id="batch5"></option>         
                        </datalist>
                        <br>
                    </div>
                    <div class="uploadinput" >
                        <label for="depart">Department :</label>
                        <input type="text" list="depart0" id="depart" autocomplete="off" name="depart" required="required">
                        <datalist id="depart0">
                            <option  >CSE</option>
                            <option  >ECE</option>
                            <option  >MECH</option>
                            <option  >CIVIL</option>
                            <option  >IT</option>    
                            <option  >EEE</option>     
                            <option  >CHE</option>  
                            <option  >BIO</option> 
                            <option  >EIE</option>         
                        </datalist>
                        <br>
                      </div>
                    <div class="uploadinput">
                        <label for="sem">Semester :</label>
                        <input type="text" id="sem" list="sem0" disabled="disabled" autocomplete="off" name="semester" multiple="multiple">
                        <datalist id="sem0">
                            <option  id="">Semester 1</option>
                            <option  id="">Semester 2</option>
                            <option  id="">Semester 3</option>
                            <option  id="">Semester 4</option>
                            <option  id="">Semester 5</option>
                            <option  id="">Semester 6</option>
                            <option  id="">Semester 7</option>
                            <option  id="">Semester 8</option>        
                        </datalist>
                        <br>
                    </div>
                    <div class="uploadinput">
                  
                        <label for="sub">Subject :</label>
                        <input type="text" id="sub" list="sub0"  autocomplete="off" name="subject" required="required">
                        <datalist id="sub0"></datalist>
                        <br>
                        </div>
                    <div class="uploadinput"  >
                        <label for="exn" >Exam Name:</label>
                        <input type="text" id="exa" list="exn" required="required" autocomplete="off" name="exam">
                        <datalist id="exn">
                            <option  id="">IAE-Test</option>
                            <option  id="">Quize</option>
                            <option  id="">Assignment</option>
                            <option  id="">Seminar</option>
                            <option  id="">Project</option>
                            <option  id="">Lab</option>
                            <option  id="">Model</option>
                            <option  id="">University</option>
                            <option  id="">Other's</option>        
                        </datalist>
                        <br>
                    </div>
                    <div id="nocos">         
                    </div> 
                    <button type="submit" style="margin: 5% 0% 3% 45%;" id="sub">Submit</button>
                  </form>
              </div>
        </div>   
        <script>
             var subjects='<%-subjects%>';
             subjects=subjects.split(",");
            var y=new Date().getFullYear();
            for(i=0;i<5;i++)
            document.getElementById("batch"+(i+1)).innerHTML=""+(y-i)+"-"+(y-i+4);
            document.getElementById("batch").addEventListener("keyup",function(){
            if(document.getElementById("batch").value.length>8)
            document.getElementById("sem").removeAttribute("disabled");
            if(document.getElementById("batch").value.length<9)
            document.getElementById("sem").setAttribute("disabled","disabled");
            });
            var status='<%-status%>';
            if(status=="1")
            window.alert("Exam Add Successfully");
            var cos=0;
            var c10=0;
            document.getElementById("lab").addEventListener("click",function()
            {
                if(c10==0)
                {
                    var html="  <option  id=''>University</option><option  id=''>No Of exper</option>";
                document.getElementById("exn").innerHTML=html
                c10=1;
                }else{
                    var html="<option  id=''>IAE-Test</option><option  id=''>Quize</option><option  id=''>Assignment</option><option  id=''>Seminar</option><option  id=''>Project</option><option  id=''>Lab</option><option  id=''>Model</option><option  id=''>University</option><option  id=''>Other's</option> ";
                document.getElementById("exn").innerHTML=html
                c10=0
                }
           
            })
            document.getElementById("sem").addEventListener("keyup",function()
        {
            var subjects1=[];
            for(i=0;i<subjects.length;i++)
            {
               var res=subjects[i].search(document.getElementById("depart").value+"#"+document.getElementById("batch").value+"#"+document.getElementById("sem").value);
               if(res!=-1)
            {
                subjects1.push(subjects[i].split("#")[3]);
            }
            }
            for(j=0;j<subjects.length;j++)
                {
                    var res=subjects[j].search(document.getElementById("depart").value+"#"+document.getElementById("batch").value+"#"+document.getElementById("sem").value+"#"+document.getElementById("sub").value);
                    if(res!=-1)
                    {
                        cos=subjects[j].split("#")[4]
                    }
                }
            var html="";
            for(i=0;i<subjects1.length;i++)
            {
                html+="<option id=\"\">"+subjects1[i]+"</option>"
            }
            document.getElementById("sub0").innerHTML=html;
        })
        document.getElementById("exa").addEventListener("keyup",function()
        {
            console.log("cos")
            
            var html="";
            if(document.getElementById("exa").value!="Model"&&document.getElementById("exa").value!="University"&&(document.getElementById("exa").value=="IAE-Test"||document.getElementById("exa").value=="Quize"||document.getElementById("exa").value=="Assignment"||document.getElementById("exa").value=="Seminar"||document.getElementById("exa").value=="Project"||document.getElementById("exa").value=="Lab"||document.getElementById("exa").value=="Other's"))
            {
                for(i=0;i<cos-1;i++)
                {
                if(i==0)
                    html+="<div style=\"float: left;margin-left: 78px;\"><p class=\"cos\" style=\"float: left;\">CO1:</p><input type=\"checkbox\" class=\"cosin\" style=\"width: 15px;\"name=\"cos1\" ></div>"
                    else
                    html+=`<div style=\"float: left;\"><p class=\"cos\" style=\"float: left;\">CO${i+1}:</p><input type=\"checkbox\" class=\"cosin\" style=\"width: 15px;\" name=\"cos${i+1}\" ></div>`
                }
            html+=`<div ><p class=\"cos\" >CO${cos}:</p><input type=\"checkbox\" class=\"cosin\" style=\"width: 15px;\" name=\"cos${cos}\"></div>`
            document.getElementById("nocos").innerHTML=html;
            console.log(html);
            }else{
                document.getElementById("nocos").innerHTML="";
            }
        });
        </script>   
    </body>
</html>